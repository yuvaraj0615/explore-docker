@page
@model IndexModel
@{
    ViewData["Title"] = "Weather Forecast";
}

<h1>Weather Forecast</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Branches.ToArray()[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Branches.ToArray()[0].Summary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Branches.ToArray()[0].TemperatureC)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Branches.ToArray()[0].TemperatureF)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Branches)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Summary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TemperatureC)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TemperatureF)
                </td>
            </tr>
        }
    </tbody>
</table>
